#!/bin/bash

set -e

ROOT="$(cd "$(dirname $0)/../../../.." && pwd)"

export CONFIG="${ROOT}/smoke-config/smoke-config.json"
export APPS_DIR="${ROOT}/cf-networking/src/example-apps"

function main() {
  local exit_status

  echo "${CONFIG}"
  pushd "${ROOT}/cf-networking/src/code.cloudfoundry.org/test/smoke" > /dev/null
    set +e
    ginkgo -r -v
    exit_status="$?"
    set -e

    report_smoke_metric_to_datadog "cf-networking-smoke.status" "${exit_status}"
    exit "${exit_status}"
  popd > /dev/null
}

function report_smoke_metric_to_datadog() {
  local metric="${1}"
  local exit_status="${2}"
  local current_time
  current_time="$(date +%s)"

  curl -X POST -H "Content-type: application/json" \
    -d "{ \"series\" :
           [{\"metric\":\"${metric}\",
            \"points\":[[${current_time}, ${exit_status}]],
            \"type\":\"gauge\",
            \"tags\":[\"deployment:${ENVIRONMENT_TAG}\"]
          }]
        }" \
  "https://app.datadoghq.com/api/v1/series?api_key=${DATADOG_API_KEY}"
}

main
