#!/bin/bash -u

<%
  network = nil
  if_link('cf_network') { |cf_network_link| network = cf_network_link.p("network") }
  unless network
    network = p("cf_network.network")
  end
%>

iptables_command="iptables"
if command -v iptables-legacy &> /dev/null
then
  iptables_command="iptables-legacy"
fi

sudo $iptables_command -C INPUT -s <%= network %> -p tcp -m tcp --destination <%= spec.ip %> --dport 8898 -j ACCEPT
if [ "$?" -eq 1 ]
then
  set -e
  sudo $iptables_command -I INPUT 1 -s <%= network %> -p tcp -m tcp --destination <%= spec.ip %> --dport 8898 -j ACCEPT
fi

