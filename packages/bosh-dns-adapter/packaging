set -e

mkdir -p ${BOSH_INSTALL_TARGET}/src
mv * ${BOSH_INSTALL_TARGET}/src
mv ${BOSH_INSTALL_TARGET}/src .

source /var/vcap/packages/golang-*-linux/bosh/compile.env

mkdir ${BOSH_INSTALL_TARGET}/bin
export GOBIN=${BOSH_INSTALL_TARGET}/bin

pushd src/code.cloudfoundry.org
go install code.cloudfoundry.org/bosh-dns-adapter/...
popd

pushd src/code.cloudfoundry.org/vendor/code.cloudfoundry.org/cf-networking-helpers/healthchecker/cmd/healthchecker
  go build -o "${BOSH_INSTALL_TARGET}/bin/healthchecker" .
popd
