check process silk-daemon
  with pidfile /var/vcap/sys/run/silk-daemon/silk-daemon.pid
  start program "/var/vcap/jobs/connectivity-agent/bin/silk-daemon_ctl start"
  stop program "/var/vcap/jobs/connectivity-agent/bin/silk-daemon_ctl stop"
  group vcap
  if failed
     host 127.0.0.1
     port <%= p("cf_networking.connectivity_agent.health_check_port") %>
     protocol HTTP
     with timeout 10 seconds
     then restart
