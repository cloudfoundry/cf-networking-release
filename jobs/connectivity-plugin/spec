---
name: connectivity-plugin

templates:
  pre-start.erb: bin/pre-start
  cni-wrapper-plugin.conf.erb: config/cni/cni-wrapper-plugin.conf

packages:
  - silk-cni
  - runc-cni

properties:
  cf_networking.network:
    description: "CIDR block for overlay network."
    default: "10.255.0.0/16"

  cf_networking.mtu:
    description: "MTU for containers. If zero, MTU will be automatically configured based on the external network MTU. In all cases, the actual container device MTU will be 50 bytes less to account for VXLAN encap overhead."
    default: 0

  cf_networking.connectivity_agent.health_check_port:
    description: "Port for the connectivity agent health check"
    default: 23954

  cf_networking.iptables_asg_logging:
    description: "Enables global logging for all ASGs"
    default: false

  cf_networking.iptables_c2c_logging:
    description: "Enables global logging for denied C2C packets"
    default: false

  cf_networking.dns_servers:
    description: "DNS servers containers will use. If set, takes precedence over DNS servers configured through garden"
    default: []

